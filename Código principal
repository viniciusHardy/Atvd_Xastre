#include <stdio.h>
#include <stdlib.h>

int* gera_vetor() { ///função 1
int *vetor;

for(int i=0; i<1000; i++)
    vetor=rand()%9999;
    
    return vetor;
}

void BubbleSort(int *vetor){ ///função 2
int aux, i, j;

for(j=999; j>=1; j--){
    for(i=0; i<j; i++)			{
        if(vetor[i]>vetor[i+1]) {
        aux=vetor[i];
        vetor[i]=vetor[i+1];
        vetor[i+1]=aux;		   }}
    					}		
}

