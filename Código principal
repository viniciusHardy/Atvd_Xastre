void maior_menor (int *vetor, int* *maior, int* *menor){ ///função 6
int i;

(*maior)=(*menor)=vetor;
for (i=1; i<1000; i++) {
	if (*(*maior) < vetor[i]) (*maior) = &vetor[i]; /// *(*maior) - compara o conteúdo
	if (*(*menor) > vetor[i]) (*menor) = &vetor[i]; /// (*menor) - é o endereço
					   }

printf("Maior = %d", maior);
printf("Menor = %d", menor);
}


